<html>
  <link rel="stylesheet" href="styles.css" />
  <title><%= title %></title>
</html>
<body>
  <h1><%= title %></h1>
  <a href="/new"><button>Create new message</button></a>
  <ul>
    <% for (let i = 0; i < messages.length; i++) { %>
    <li>
      <b>User:</b> <%= messages[i].user %> <br />
      <b>Text:</b> <%= messages[i].text %> <br />
      <b>Date:</b> <%= messages[i].added %>
    </li>
    <br />
    <% } %>
  </ul>
</body>
